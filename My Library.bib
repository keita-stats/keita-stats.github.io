@article{sharp_reasons_2006,
  title = {Reasons for Participation and Non-Participation in a Randomized Controlled                 Trial: Postal Questionnaire Surveys of Women Eligible for {{TOMBOLA}} ({{Trial Of}}                 {{Management}} of {{Borderline}} and {{Other Low-grade Abnormal}} Smears)},
  author = {Sharp, L and Cotton, S C and Alexander, L and Williams, E and Gray, N M and Reid, J M},
  year = {2006},
