@article{martin-fernandez_bayesian-multiplicative_2015,
  title = {Bayesian-Multiplicative Treatment of Count Zeros in Compositional Data Sets},
  author = {{Mart{\'i}n-Fern{\'a}ndez}, Josep-Antoni and Hron, Karel and Templ, Matthias and Filzmoser, Peter and {Palarea-Albaladejo}, Javier},
